<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <h1>Edit Flair</h1>
      <form action="/<%= flair.postId %>/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Flair Name</label>
          <input type="text" name="name" value="<%= flair.name %>" class="form-control" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="body">Flair color</label>
          <textarea name="color" rows="1" class="form-control" placeholder="Enter Color"><%= flair.color %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
